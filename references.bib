@article{CALOGIURI2021,
title = {The multi-period p-center problem with time-dependent travel times},
journal = {Computers \& Operations Research},
volume = {136},
pages = {105487},
year = {2021},
issn = {0305-0548},
doi = {https://doi.org/10.1016/j.cor.2021.105487},
